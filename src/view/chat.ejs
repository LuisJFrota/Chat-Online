<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.1/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <input type="hidden" id="room" name="room" value="<%=Room%>">
    <div class="p-5 m-5 bg-light border">
        <div class="container">
            <div class="row py-2">
                <div class="col">
                    <input class="form-control" type="text" id="name" name="name" placeholder="Nome">
                </div>
            </div>
            <div class="row py-2">
                <div class="col">
                    <div class="form-control overflow-auto" style="height: 300px;" id="msgarea" name="msgarea"></div>
                </div>     
            </div>
            <div class="row py-2">
                <div class="col-6">
                    <input class="form-control" type="text" id="msg" name="msg" placeholder="Mensagem">          
                </div>
                <div class="col-2">
                    <input class="btn btn-success" type="button" id="sbmt_button" name="sbmt_button" value="Enviar">
                </div>
            </div>
        </div>
    </div>
    
</body>
<script type="text/javascript">
    var socket = io('http://localhost:3000')

    var room = document.getElementById('room')

    var msgarea = document.getElementById('msgarea')
    var authorfield = document.getElementById('name')
    var msgfield = document.getElementById('msg')
    var btn = document.getElementById('sbmt_button')

    function renderMsg(data) {
        var msg = {
            author: data.author,
            msg: data.msg
        }
        a = document.createElement('div')
        a.append(`${msg.author}:${msg.msg}`)
        msgarea.append(a)
    }

    function sendMsg() {
        var messageobj = {
            author: authorfield.value,
            msg: msgfield.value,
            room: room.value
        }

        socket.emit('sendMessage', messageobj)
        renderMsg(messageobj)
        msgfield.value = ""
    }

    btn.addEventListener("click", () => {
        sendMsg()
    })

    msgfield.addEventListener("keypress", (e) => {
        if(e.key === "Enter")
        {
            event.preventDefault()
            sendMsg()
        }
    })

    socket.on('previousMessages', data => {
        for (msg of data)
        {
            renderMsg(msg)
        }
    })

    socket.on('receiveMessage', data => {
        renderMsg(data)
    })

</script>
</html>